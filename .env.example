# TeleHub Environment Configuration

# Basic server configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/telehub

# Redis Configuration (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Google Cloud Platform Configuration
GCP_PROJECT_ID=your-telehub-project
GCP_STORAGE_BUCKET=telehub-movies
# GCP_KEY_FILE=path/to/service-account-key.json
# GCP_CREDENTIALS={"type":"service_account",...}

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key

# Session Secret
SESSION_SECRET=your-session-secret-key

# AWS S3 Configuration (if using S3 instead of GCP)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=telehub-movies

# Database Configuration (PostgreSQL for Drizzle)
DATABASE_URL=postgresql://username:password@localhost:5432/telehub

# Development Settings
DEBUG=true
LOG_LEVEL=debug